3. Particle Effects (pre lepÅ¡Ã­ vizuÃ¡l):
python# shared/particles.py

import pygame
import random

class Particle:
    def __init__(self, x, y, color):
        self.x = x
        self.y = y
        self.vx = random.uniform(-3, 3)
        self.vy = random.uniform(-5, -1)
        self.color = color
        self.lifetime = 30
        self.size = random.randint(2, 5)
    
    def update(self):
        self.x += self.vx
        self.y += self.vy
        self.vy += 0.2  # GravitÃ¡cia
        self.lifetime -= 1
    
    def draw(self, screen):
        if self.lifetime > 0:
            alpha = int(255 * (self.lifetime / 30))
            pygame.draw.circle(screen, self.color, (int(self.x), int(self.y)), self.size)
    
    def is_alive(self):
        return self.lifetime > 0

class ParticleSystem:
    def __init__(self):
        self.particles = []
    
    def emit(self, x, y, color, count=10):
        """VytvorÃ­ explÃ³ziu partiklov"""
        for _ in range(count):
            self.particles.append(Particle(x, y, color))
    
    def update(self):
        for particle in self.particles[:]:
            particle.update()
            if not particle.is_alive():
                self.particles.remove(particle)
    
    def draw(self, screen):
        for particle in self.particles:
            particle.draw(screen)

# PouÅ¾itie v hre:
# particles = ParticleSystem()
# particles.emit(player_x, player_y, (255, 0, 0), count=20)  # ÄŒervenÃ¡ explÃ³zia
4. Settings Menu (hlasitosÅ¥, ovlÃ¡danie):
python# V launcheri pridaj Settings option

def show_settings(self):
    """Nastavenia konzoly"""
    settings = self.load_settings()
    selected_option = 0
    options = ['Volume', 'Controls', 'Language', 'Back']
    
    running = True
    while running:
        self.screen.fill(self.BG_COLOR)
        
        # Titulok
        title = self.font_large.render("SETTINGS", True, self.TEXT_COLOR)
        self.screen.blit(title, (400 - title.get_width()//2, 50))
        
        # Options
        for i, option in enumerate(options):
            color = self.HIGHLIGHT_COLOR if i == selected_option else self.TEXT_COLOR
            text = self.font_medium.render(option, True, color)
            
            # Zobraz hodnotu nastavenia
            if option == 'Volume':
                value = f"{settings['volume']}%"
                value_text = self.font_small.render(value, True, color)
                self.screen.blit(text, (200, 150 + i*80))
                self.screen.blit(value_text, (500, 150 + i*80))
            else:
                self.screen.blit(text, (300, 150 + i*80))
        
        pygame.display.flip()
        
        # Input handling
        for event in pygame.event.get():
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_UP:
                    selected_option = (selected_option - 1) % len(options)
                elif event.key == pygame.K_DOWN:
                    selected_option = (selected_option + 1) % len(options)
                elif event.key == pygame.K_LEFT and options[selected_option] == 'Volume':
                    settings['volume'] = max(0, settings['volume'] - 10)
                    self.save_settings(settings)
                elif event.key == pygame.K_RIGHT and options[selected_option] == 'Volume':
                    settings['volume'] = min(100, settings['volume'] + 10)
                    self.save_settings(settings)
                elif event.key == pygame.K_RETURN and options[selected_option] == 'Back':
                    running = False
                elif event.key == pygame.K_ESCAPE:
                    running = False
        
        self.clock.tick(60)

def load_settings(self):
    """NaÄÃ­ta settings z JSON"""
    try:
        with open('shared/settings.json', 'r') as f:
            return json.load(f)
    except:
        return {'volume': 70, 'controls': 'default', 'language': 'sk'}

def save_settings(self, settings):
    """UloÅ¾Ã­ settings"""
    with open('shared/settings.json', 'w') as f:
        json.dump(settings, f, indent=2)

