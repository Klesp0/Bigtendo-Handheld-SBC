        'text': (200, 255, 200),
        'highlight': (100, 255, 100),
        'accent': (255, 200, 50)
    }
}

def get_theme(name='classic'):
    return THEMES.get(name, THEMES['classic'])
AnimovanÃ© pozadie:
pythonclass AnimatedBackground:
    def __init__(self, width, height):
        self.width = width
        self.height = height
        self.stars = []
        
        # Vytvor hviezdy
        for _ in range(100):
            x = random.randint(0, width)
            y = random.randint(0, height)
            speed = random.uniform(0.5, 2)
            size = random.randint(1, 3)
            self.stars.append({'x': x, 'y': y, 'speed': speed, 'size': size})
    
    def update(self):
        for star in self.stars:
            star['y'] += star['speed']
            if star['y'] > self.height:
                star['y'] = 0
                star['x'] = random.randint(0, self.width)
    
    def draw(self, screen):
        for star in self.stars:
            brightness = int(100 + (star['speed'] / 2) * 155)
            color = (brightness, brightness, brightness)
            pygame.draw.circle(screen, color, (int(star['x']), int(star['y'])), star['size'])

# V launcheri:
# self.background = AnimatedBackground(800, 480)
# 
# V draw loop:
# self.background.update()
# self.background.draw(self.screen)

ğŸ”Š AUDIO MANAGER
CentralizovanÃ½ zvukovÃ½ systÃ©m:
python# shared/audio_manager.py

import pygame
import json

class AudioManager:
    def __init__(self):
        pygame.mixer.init()
        self.sounds = {}
        self.music_volume = 0.7
        self.sfx_volume = 0.7
        self.muted = False
        
        self.load_settings()
    
    def load_settings(self):
        """NaÄÃ­ta nastavenia hlasitosti"""
        try:
            with open('shared/settings.json', 'r') as f:
                settings = json.load(f)
                volume = settings.get('volume', 70) / 100
                self.music_volume = volume
                self.sfx_volume = volume
        except:
            pass
    
    def load_sound(self, name, path):
        """NaÄÃ­ta zvuk do pamÃ¤te"""
        try:
            sound = pygame.mixer.Sound(path)
            sound.set_volume(self.sfx_volume)
            self.sounds[name] = sound
        except:
            print(f"Warning: Could not load sound {path}")
    
    def play_sound(self, name):
        """PrehrÃ¡ zvukovÃ½ efekt"""
        if not self.muted and name in self.sounds:
            self.sounds[name].play()
    
    def play_music(self, path, loops=-1):
        """PrehrÃ¡ hudobnÃ½ track (loop = nekoneÄne)"""
        try:
            pygame.mixer.music.load(path)
            pygame.mixer.music.set_volume(self.music_volume)
            pygame.mixer.music.play(loops)
        except:
            print(f"Warning: Could not load music {path}")
    
    def stop_music(self):
        pygame.mixer.music.stop()
    
    def toggle_mute(self):
        self.muted = not self.muted
        if self.muted:
            pygame.mixer.music.set_volume(0)
            for sound in self.sounds.values():
                sound.set_volume(0)
        else:
            pygame.mixer.music.set_volume(self.music_volume)
            for sound in self.sounds.values():
                sound.set_volume(self.sfx_volume)

# PouÅ¾itie:
# audio = AudioManager()
# audio.load_sound('coin', 'assets/sounds/coin.wav')
# audio.load_sound('jump', 'assets/sounds/jump.wav')
# audio.play_music('assets/sounds/menu_music.mp3')
# 
# V hre:
# audio.play_sound('coin')  # KeÄ zbereÅ¡ coin

ğŸ® COMPLETE SNAKE GAME EXAMPLE
KompletnÃ½ Snake s vÅ¡etkÃ½mi features:
python# games/snake/snake.py

import pygame
import sys
import random
from pathlib import Path
sys.path.append(str(Path(__file__).parent.parent.parent))
from shared.engine import GameEngine
from shared.audio_manager import AudioManager

class Snake:
    def __init__(self):
        pygame.init()
        self.screen = pygame.display.set_mode((800, 480))
        pygame.display.set_caption("Snake")
        self.clock = pygame.time.Clock()
        
        # Game constants
        self.GRID_SIZE = 20
        self.GRID_WIDTH = 800 // self.GRID_SIZE
        self.GRID_HEIGHT = 480 // self.GRID_SIZE
        
        # Colors
        self.BG_COLOR = (20, 40, 20)
        self.SNAKE_COLOR = (50, 255, 50)
        self.FOOD_COLOR = (255, 50, 50)
        self.GRID_COLOR = (30, 50, 30)
        
        # Audio
        self.audio = AudioManager()
        self.audio.load_sound('eat', 'games/snake/assets/eat.wav')
        self.audio.load_sound('gameover', 'games/snake/assets/gameover.wav')
        
        # Font
        self.font = pygame.font.Font(None, 36)
        
        # Game state
        self.reset_game()
        
        # High score
        self.high_score = GameEngine.load_high_score("Snake")
    
    def reset_game(self):
        """Resetuje hru na zaÄiatok"""
        self.snake = [(self.GRID_WIDTH // 2, self.GRID_HEIGHT // 2)]
        self.direction = (1, 0)  # Right
        self.next_direction = (1, 0)
        self.food = self.spawn_food()
        self.score = 0
        self.game_over = False
        self.paused = False
    
    def spawn_food(self):
        """Spawn jedla na nÃ¡hodnÃ© miesto (nie v hadovi)"""
        while True:
            x = random.randint(0, self.GRID_WIDTH - 1)
            y = random.randint(0, self.GRID_HEIGHT - 1)
            if (x, y) not in self.snake:
                return (x, y)
    
    def handle_events(self):
        """Input handling"""
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                return "quit"
            
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    return "quit"
                
                if self.game_over:
                    if event.key == pygame.K_RETURN:
                        self.reset_game()
                    elif event.key == pygame.K_ESCAPE:
                        return "menu"
                
                if event.key == pygame.K_p:
                    self.paused = not self.paused
                
                # Direction control (nemÃ´Å¾e Ã­sÅ¥ opaÄnÃ½m smerom)
                if not self.game_over:
                    if event.key == pygame.K_UP and self.direction != (0, 1):
                        self.next_direction = (0, -1)
                    elif event.key == pygame.K_DOWN and self.direction != (0, -1):
                        self.next_direction = (0, 1)
                    elif event.key == pygame.K_LEFT and self.direction != (1, 0):
                        self.next_direction = (-1, 0)
                    elif event.key == pygame.K_RIGHT and self.direction != (-1, 0):
                        self.next_direction = (1, 0)
        
        return None
    
    def update(self):
        """Game logic"""
        if self.game_over or self.paused:
            return
        
        # Update direction
        self.direction = self.next_direction
        
        # Move snake
        head_x, head_y = self.snake[0]
        new_head = (head_x + self.direction[0], head_y + self.direction[1])
        
        # Check collision with walls
        if (new_head[0] < 0 or new_head[0] >= self.GRID_WIDTH or
            new_head[1] < 0 or new_head[1] >= self.GRID_HEIGHT):
            self.game_over = True
            self.audio.play_sound('gameover')
            return
        
        # Check collision with self
        if new_head in self.snake:
            self.game_over = True
            self.audio.play_sound('gameover')
            return
        
        # Add new head
        self.snake.insert(0, new_head)
        
        # Check if ate food
        if new_head == self.food:
            self.score += 10
            self.audio.play_sound('eat')
            self.food = self.spawn_food()
        else:
            # Remove tail (had sa nepredlÅ¾uje)
            self.snake.pop()
    
    def draw(self):
        """Rendering"""
        self.screen.fill(self.BG_COLOR)
        
        # Draw grid (optional, pre retro look)
        for x in range(0, 800, self.GRID_SIZE):
            pygame.draw.line(self.screen, self.GRID_COLOR, (x, 0), (x, 480))
        for y in range(0, 480, self.GRID_SIZE):
            pygame.draw.line(self.screen, self.GRID_COLOR, (0, y), (800, y))
        
        # Draw snake
        for i, segment in enumerate(self.snake):
            x = segment[0] * self.GRID_SIZE
            y = segment[1] * self.GRID_SIZE
            
            # Head je svetlejÅ¡Ã­
            if i == 0:
                color = (100, 255, 100)
            else:
                color = self.SNAKE_COLOR
            
            pygame.draw.rect(self.screen, color, 
                           (x + 1, y + 1, self.GRID_SIZE - 2, self.GRID_SIZE - 2))
        
        # Draw food
        fx = self.food[0] * self.GRID_SIZE
        fy = self.food[1] * self.GRID_SIZE
        pygame.draw.circle(self.screen, self.FOOD_COLOR, 
                         (fx + self.GRID_SIZE // 2, fy + self.GRID_SIZE // 2), 
                         self.GRID_SIZE // 2 - 2)
        
        # Draw score
        score_text = self.font.render(f"Score: {self.score}", True, (255, 255, 255))
        self.screen.blit(score_text, (10, 10))
        
        high_score_text = self.font.render(f"High: {self.high_score}", True, (200, 200, 200))
        self.screen.blit(high_score_text, (10, 45))
        
        # Draw paused
        if self.paused:
            pause_text = self.font.render("PAUSED", True, (255, 255, 0))
            pause_rect = pause_text.get_rect(center=(400, 240))
            self.screen.blit(pause_text, pause_rect)
        
        # Draw game over
        if self.game_over:
            # Save high score
            if self.score > self.high_score:
                GameEngine.save_high_score("Snake", self.score)
                self.high_score = self.score
            
            # Semi-transparent overlay
            overlay = pygame.Surface((800, 480))
            overlay.set_alpha(128)
            overlay.fill((0, 0, 0))
            self.screen.blit(overlay, (0, 0))
            
            # Game over text
            game_over_text = self.font.render("GAME OVER", True, (255, 0, 0))
            game_over_rect = game_over_text.get_rect(center=(400, 200))
            self.screen.blit(game_over_text, game_over_rect)
            
            final_score_text = self.font.render(f"Final Score: {self.score}", True, (255, 255, 255))
            final_score_rect = final_score_text.get_rect(center=(400, 250))
            self.screen.blit(final_score_text, final_score_rect)
            
            if self.score == self.high_score and self.score > 0:
                new_high_text = self.font.render("NEW HIGH SCORE!", True, (255, 215, 0))
                new_high_rect = new_high_text.get_rect(center=(400, 300))
                self.screen.blit(new_high_text, new_high_rect)
            
            restart_text = pygame.font.Font(None, 24).render("ENTER - Restart  |  ESC - Menu", True, (150, 150, 150))
            restart_rect = restart_text.get_rect(center=(400, 400))
            self.screen.blit(restart_text, restart_rect)
        
        pygame.display.flip()
    
    def run(self):
        """Main game loop"""
        running = True
        
        while running:
            action = self.handle_events()
            
            if action == "quit":
                running = False
            elif action == "menu":
                break
            
            self.update()
            self.draw()
            
            # FPS (had sa pohybuje pomalÅ¡ie neÅ¾ 60 FPS)
            self.clock.tick(10 + self.score // 50)  # RÃ½chlosÅ¥ stÃºpa so score
        
        pygame.quit()

if __name__ == "__main__":
    game = Snake()
    game.run()

ğŸ“± RESPONSIVE UI (pre rÃ´zne rozlÃ­Å¡enia)
python# shared/display_config.py

class DisplayConfig:
    def __init__(self):
        # Detect display resolution
        info = pygame.display.Info()
        self.width = info.current_w
        self.height = info.current_h
        
        # Set responsive sizes
        if self.width == 800 and self.height == 480:
            self.scale = 1.0
        elif self.width == 1024 and self.height == 600:
            self.scale = 1.28
        else:
            self.scale = 1.0
        
        # Font sizes
        self.FONT_LARGE = int(72 * self.scale)
        self.FONT_MEDIUM = int(48 * self.scale)
        self.FONT_SMALL = int(32 * self.scale)
        
        # Grid size for games
        self.GRID_SIZE = int(20 * self.scale)
    
    def scale_value(self, value):
        """Scale any value based on screen size"""
        return int(value * self.scale)

# PouÅ¾itie:
# display = DisplayConfig()
# font = pygame.font.Font(None, display.FONT_LARGE)

ğŸ› DEBUGGING TOOLS
FPS Counter a Debug Info:
pythonclass DebugOverlay:
    def __init__(self):
        self.font = pygame.font.Font(None, 20)
        self.enabled = False  # Toggle s F3
        self.fps_history = []
    
    def toggle(self):
        self.enabled = not self.enabled
    
    def update(self, clock):
        fps = clock.get_fps()
        self.fps_history.append(fps)
        if len(self.fps_history) > 60:
            self.fps_history.pop(0)
    
    def draw(self, screen, extra_info=None):
        if not self.enabled:
            return
        
        # Semi-transparent background
        overlay = pygame.Surface((300, 150))
        overlay.set_alpha(200)
        overlay.fill((0, 0, 0))
        screen.blit(overlay, (10, 10))
        
        # FPS
        avg_fps = sum(self.fps_history) / len(self.fps_history) if self.fps_history else 0
        fps_text = self.font.render(f"FPS: {avg_fps:.1f}", True, (0, 255, 0))
        screen.blit(fps_text, (20, 20))
        
        # Memory (if available)
        try:
            import psutil
            process = psutil.Process()
            mem = process.memory_info().rss / 1024 / 1024  # MB
            mem_text = self.font.render(f"RAM: {mem:.1f} MB", True, (0, 255, 255))
            screen.blit(mem_text, (20, 45))
        except:
            pass
        
        # Extra custom info
        if extra_info:
            y = 70
            for key, value in extra_info.items():
                text = self.font.render(f"{key}: {value}", True, (255, 255, 255))
                screen.blit(text, (20, y))
                y += 25

